{{#if error }}
<div align="center" style="width: 50%; height: auto; margin-left:25%; border-radius:4rem; padding: 2rem ; margin-top: 10%; color: red;" class=" messError alert alert-danger alert-dismissible fade show" role="alert">
    <div class="">
        <h1 style="color:red ;">***!!!ATENCION!!!****</h1>
        {{error}}
        <br>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        {{#if volver }}
        <form action="/" method="get">
            <button class="alertaVerde" >Volver</button>
        </form>
        {{/if}}
    </div>
</div>
{{/if}}

{{#each errors }}
<div align="center" style="width: 60%; height: auto; margin-left: 20%; border-radius:4rem; padding: 2rem ; margin-top: 10%; color: red;" class=" messError alert alert-danger alert-dismissible fade show" role="alert">
    <h2>***ATENCION!!!****</h2> 
    {{text}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <br>
</div>
{{/each}}